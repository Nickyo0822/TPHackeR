                    },
                    "400": {
                        "description": "Invalid request"
                    }
                }
            }
        },
        "/changeprofile": {
            "get": {
                "tags": [
                    "profiles"
                ],
                "summary": "Change current user profile",
                "operationId": "654874e70c5ae9fde276b53feeba8ec9",
                "responses": {
                    "200": {
